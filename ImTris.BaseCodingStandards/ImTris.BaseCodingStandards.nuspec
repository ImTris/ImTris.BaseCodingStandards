<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
    <metadata>
        <!-- Package metadata -->
        <id>ImTris.BaseCodingStandards</id>
        <developmentDependency>true</developmentDependency>
        <description>Starting point for configuring DotNet coding standards</description>
        <authors>Tristan Benschop</authors>
        <license type="expression">MIT</license>
        <tags>coding-standards analyzers editorconfig</tags>
        
        <!-- The version is set when building the package -->
        <version>$version$</version>

        <!-- Add analyzers -->
        <dependencies>
            <dependency id="Microsoft.VisualStudio.Threading.Analyzers" version="17.14.15" />
            <dependency id="Microsoft.CodeAnalysis.BannedApiAnalyzers" version="4.14.0" />
            <dependency id="SonicAnalyzers.CSharp" version="1.15.0.120848"/>
        </dependencies>
    </metadata>

    <!-- Add props / targets / editorconfig files to the package -->
    <files>
        <file src="config\**" target="" />
    </files>
</package>